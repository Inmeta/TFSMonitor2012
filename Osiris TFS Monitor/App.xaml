<Application x:Class="Osiris.Tfs.Monitor.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Osiris.Tfs.Monitor"
    Startup="OnStartup" 
	Exit="OnExit" 
	DispatcherUnhandledException="OnDispatcherUnhandledException"
	>
    <Application.Resources>

		<ResourceDictionary>

			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/Resources/Common.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Resources/ListViewItem.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<!-- Instance of ViewModels-modules -->
			<vm:ViewModelLocator x:Key="ViewModelLocator" />

		</ResourceDictionary>

	</Application.Resources>
</Application>

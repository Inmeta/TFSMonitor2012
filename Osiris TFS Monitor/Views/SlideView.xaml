<UserControl x:Class="Osiris.Tfs.Monitor.SlideView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:l="clr-namespace:Osiris.Tfs.Monitor"
	Loaded="UserControl_Loaded"
	Unloaded="UserControl_Unloaded"
	>

	<UserControl.Resources>
		<DataTemplate DataType="{x:Type l:SlideElementContainerVm}">
			<l:SlideElementContainerView/>
		</DataTemplate>
	</UserControl.Resources>

	<Grid>
		<Image Source="pack://application:,,,/Resources/PowerpointInspired.gif" Stretch="Fill" />
		<Canvas x:Name="canvas" Background="Transparent" ClipToBounds="True" />
	</Grid>

</UserControl>
